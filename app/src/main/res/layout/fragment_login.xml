<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_login_card"
        android:layout_width="600dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_bg_login_card"
        >
        <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="65dp"
            android:src="@drawable/ic_logo_login" />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="450dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_login_logo"
            android:background="@drawable/bg_white_angle_normal"
            android:drawablePadding="1dp"
            android:gravity="center_vertical"
            android:hint="@string/input_hint_phone_no"
            android:inputType="phone"
            android:paddingLeft="15dp"
            android:paddingRight="105dp"
            android:textColor="@color/grey_black_deep"
            android:textColorHint="#b9c1c7"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_alignRight="@+id/edit_phone"
            android:layout_below="@+id/iv_login_logo"
            android:background="@drawable/bg_yellow_angle"
            android:gravity="center"
            android:text="@string/signin"
            android:textColor="#8b572a"
            android:textSize="28sp" />
    </RelativeLayout>
</FrameLayout>