<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="QuestionTextStyle">
        <item name="android:textColor">@color/grey_black_deep</item>
        <item name="android:textSize">@dimen/tablet_text_size_large</item>
        <item name="android:lineSpacingExtra">@dimen/layout_spacing_normal</item>
    </style>

    <style name="CheckTextStyle" parent="QuestionTextStyle">
        <item name="android:drawablePadding">@dimen/layout_spacing_normal</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
